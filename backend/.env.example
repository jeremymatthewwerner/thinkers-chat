# Thinkers Chat Backend Configuration
# Copy this to .env and fill in your values

# Anthropic API Key (required for Claude-powered thinker responses)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Database URL (default is SQLite for development)
# For production (Railway), use: postgresql+asyncpg://...
DATABASE_URL=sqlite+aiosqlite:///./thinkers_chat.db

# Debug mode (set to true for development)
DEBUG=true

# CORS allowed origins (comma-separated for multiple origins)
# For production, set to your frontend URL (e.g., https://your-app.up.railway.app)
CORS_ORIGINS=http://localhost:3000

# Test mode (set to true to enable test endpoints)
# Only enable this in test environments, never in production
TEST_MODE=false
